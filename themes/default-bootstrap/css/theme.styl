body
	background #F2F2F2
	margin 0px
	font-family Arial

header
	background #fff

.shop-phone
	background #000
	color #fff
	display block
	font-size 11px
	max
	padding 5px 0 4px 0

	.icon-colombia
		background url("../img/icon/colombia.jpg")
		display inline-block
		height 9px
		margin-right 15px
		width 12px

#header-logo
	img
		display inline-block

.shopping_cart > a:first-child
	background url("../img/shopcar.png") no-repeat 
	&:before
		display none
	&:after
		display none !important
		height 36px
		width 130px

	b
		color #5D5D5D
		font-size 11px

#search_block_top
	padding-top 20px
	 
	input[type=text]
		border-color #76896E
		line-height 24px !important
		height 24px !important
	.btn.button-search
		background url("../img/icon/search.png") center no-repeat
		height 24px
		&:before
			border-left 1px solid #76896E
			content "\00a0"
			height 18px
			position relative
			right 0px
			top -7px
		
#topContainer
	> div
		width 100% !important

#mainMenu
	border-top 2px solid #FF7F00
	.container
		ul 
			li
				border-left 1px solid #5D5D5D
				display inline-block
				list-style none
				margin-top 15px
				padding 0px
				position relative
				text-align center

				a
					
					color #5D5D5D
					display block
					font-size 11px
					padding 0px 25px

					&:hover
						color #FF7F00
						text-decoration none

				&:first-child
					border-left 0px
			
			li.active
				a
					color #FF7F00
					font-weight bold

					&:hover
						color #5D5D5D

				:before
					content "\00a0"
					border-left 4px solid rgba(0, 0, 0, 0)
					border-right 4px solid rgba(0, 0, 0, 0)
					border-top 5px solid #FF7F00
					left 50%
					margin-left -4px
					position absolute
					top -15px
					width 0px  

#slider
	position relative
	img 
		width 100%

	.carousel-indicators
		background rgba(0, 0, 0, .8)
		bottom 0px
		left auto
		margin-bottom 0px
		margin-left 0px
		padding 2px 25px
		right 1px
		text-align right
		max-width 30%
		width auto

#htmlcontent_top
	display none

.categoriesHomeImages
	margin-top 20px
	min-height 97px
	a
		color #fff
		&:hover
			color #ccc
			text-decoration none

	padding 0px
	padding-right 35px
	position relative

	img
		max-width 100%

	span
		background #141213
		bottom 0px
		display block
		left 0px
		padding 10px
		position absolute
		text-align center
		width 30%

#categories_block_left
	background #E5E5E5

	h2
		background #000
		color #fff
		font-size 17px
		margin-bottom 0px
		padding 10px 0 10px 10px 

	.block_content > ul
		border-bottom 2px #AAAAAA solid
		border-top 0px
		padding-left 0px

		li
			list-style none

			.grower
				background rgba(0, 0, 0, 0)
				left 0px
				height 100%
				width 30px
				&:before
					border-left 8px solid #A9B138
					border-top 4px solid rgba(0, 0, 0, 0)
					border-bottom 4px solid rgba(0, 0, 0, 0)
					content "\00a0"
					position relative 
					height 0px
					left 10px
					top 10px
					width 0px

			.grower.OPEN
				&:before
					border-top 8px solid #A9B138
					border-left 4px solid rgba(0, 0, 0, 0)
					border-right 4px solid rgba(0, 0, 0, 0)

			a
				color #5D5D5D
				border-bottom 0px
				padding-left 30px

				&:before 
					content "\00a0"

				&:hover
					text-decoration none
.footerMenu
	border-left 1px solid #5D5D5D
	ul
		list-style none
		li
			a
				color #5D5D5D
				&:hover
					color #FF7F00
					text-decoration none


.copy
	margin-top 30px
	border-top 1px solid #5D5D5D
	p
		
		margin auto
		padding-top 15px
		padding-bottom 20px
		text-align center
		width 80%

#block_contact_infos
	border-left 1px solid #5D5D5D
	padding 5px 0px
	ul
		list-style none

#footercmsone
	padding-bottom 15px
	padding-left 0px
	padding-right 0px
	padding-top 15px

footer
	background #fff
	overflow hidden
	padding-top 30px

#productFeatured
	background #fff
	border-bottom 1px solid #5D5D5D
	border-top 1px solid #5D5D5D
	list-style none
	padding 0px
	padding-bottom 20px
	position relative
	text-align center

	li
		display inline-block
		padding 1.5%
		text-align center
		vertical-align top
		width 19%

		img
			display block
			margin auto
			max-width 100%
			max-height 168px
		
		.name
			border-bottom 1px solid #5D5D5D

			h3
				font-size 10px
				font-weight bold
				a
					color #5D5D5D
					padding-bottom 10px

					&:hover
						color #ff7f00
						text-decoration none

		.price
			color #2C5323
			font-weight bold
			text-align right

		.buy
			a
				background #FF7F00
				color #fff
				display block
				font-size 8px
				margin auto
				margin-top 20px
				padding-bottom 6px
				padding-top 6px
				width 66px

				&:hover
					color #5D5D5D
					font-weight bold
					text-decoration none

.carousel-control
	background #061104
	height 52px
	opacity .75
	top 45%
	width 37px
	&:hover
		opacity 1

.carousel-control .glyphicon-chevron-right
	margin-left 0px
	right 15%

#productFeaturedTitle
	color #5D5D5D
	font-size 17px
	font-weight bold

#btnMenu
	background url("../img/btnMenu.jpg")
	display none
	height 48px
	width 77px
	&:hover
		cursor pointer
		background-position bottom

#make
	background url("../img/make.jpg")
	background-size 100% 100%
	height 88px
	margin auto
	padding-top 18px
	width 100%
	max-width 1366px

	.container
		background #fff
		height 53px

.manufacturer
	margin auto
	width 95%

	.item img
		display inline-block
		margin-top 6px
		margin-right 0.65%
		max-height 80%
		width 9%


@media (max-width: 980px)
	.shop-phone, #make
		display none
	
	.logo.img-responsive
		margin auto

	#btnMenu
		display block
		float left
	
	#mainMenu
		background url("../img/backgroundMenu.png") repeat-x
		border-top 0px
		height 48px
		overflow hidden
		.container 
			width 100%
			padding 0px

		ul
			display none
	
	.shopping_cart
		padding-top 5px

	.shopping_cart > div
		display none

	#categories_block_left
		display none

	#search_block_top
		padding-top 10px

		input[type=text]
			background #fff
			border 1px solid #fff
			border-radius 0px

		.btn.button-search
			background #FF5B00 url("../img/searchBtn.png") no-repeat center
			border-radius 0px
			&:before
				display none

	#footercmstwo
		display none

	#block_contact_infos
		display none

	.footerMenu
		display none

	.copy
		margin-top 5px
		width 100%

		p
			text-align left
			width 75%

	#paymentMethods
		display block
		margin auto

	#footer
		.container 
			padding 0px
			width 100%

.icon-map-marker
	display none

.breadcrumb
	display none

#center_column
	padding-top 20px

.product-listing
	font-size 14px
	font-weight bold

#subcategories ul
	list-style none

@media (max-width: 770px)
	#search_block_top
		display inline-block
		float none
		padding-left 5%
		width 30%
		vertical-align top

	.shopping_cart
		display inline-block
		float none
		width 30%

	.carousel-indicators
		display none

	#top_column 
		padding 0px